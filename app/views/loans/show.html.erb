<article class="media">
  <figure class="media-left">
    <p class="image is-96x96">
      <%= image_tag @loan.item.image %>
    </p>
  </figure>
  <div class="media-content">
    <div class="content">
      <p>
        <strong>
          <%= @loan.item.full_name %>
        </strong>
        <small>
          <%= @loan.item.inventory_tag %>
        </small>
        <br>
        <%= @loan.item.description %>
          <br>
          <small>
            <i class="<%= @loan.item.category.icon %>"></i>
            <%= @loan.item.category.name %> &bull;
              <%= @loan.item.serial_number %>
          </small>
          <hr>
          <small>borrowed by
            <strong>
              <%= @loan.member.full_name %>
            </strong>
            <br> from
            <%= @loan.created_at.strftime("%b %e %y at %R") %> to
              <%= @loan.updated_at.strftime("%b %e %y at %R") %>
          </small>
      </p>
    </div>
  </div>
</article>