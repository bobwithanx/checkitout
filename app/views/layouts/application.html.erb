<!DOCTYPE html>
<!-- <html class="has-navbar-fixed-top"> -->
<html class="">
  <head>
    <title>CheckItOut</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.4.1/css/simple-line-icons.css', 'https://opensource.keycdn.com/fontawesome/4.7.0/font-awesome.min.css',
    'https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <section class="hero is-black hero-background">
      <div class="hero-body ">
        <div class="container is-fluid">
          <div class="columns is-vcentered">
            <div class="column">
              <p>
                <%= link_to 'CheckItOut', welcome_index_path, class: "title" %>
              </p>
              <p class="subtitle">
                Inventory tracking system.
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="hero-foot">
        <div class="container is-fluid">
          <div class="level">
            <div class="level-left"></div>
            <div class="level-right">
              <nav class="tabs is-boxed pull-right">
                <% nav_links selected_class:'is-active', url_segment: 1, wrapper: 'li' do |nav| %>
                  <%= nav.link_to 'Admin', admin_index_path, class: " is-tab" %>
                <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</section>

<%= yield %>

</body>
</html>