<!DOCTYPE html>
<!-- <html class="has-navbar-fixed-top"> -->
<html class="">

<head>
  <title>CheckItOut</title>
  <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <%= link_to 'CheckItOut', welcome_index_path, class: "navbar-brand" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <%= active_link_to 'Members', members_path, wrap_tag: :li, wrap_class: 'nav-item', class: 'nav-link' %>
          <%= active_link_to 'Items', items_path, wrap_tag: :li, wrap_class: 'nav-item', class: 'nav-link' %>

          <%= form_with url:search_members_path, local: true, method: :get, html: { id: "search-form", class: "form-inline my-2 my-lg-0" } do |form| %>
          <%= form.text_field :q, placeholder: "Find Student", class: "form-control mr-sm-2", autocomplete: "off", autocorrect: "off", autocapitalize: "off", spellcheck: "false", id: 'member-autocomplete', data: { behavior: 'autocomplete'} %>
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </ul>
          <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/admin">
              Admin
            </a>
          </li>
          </ul>
        <% end %>
      </div>
    </div>
  </nav>

  <%= yield %>

    <div id="modal-holder"></div>

</body>

</html>