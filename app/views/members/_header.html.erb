<div class="hero ">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <%= @member.full_name %>
      </h1>
      <h2 class="subtitle">
          <%= @member.id_number %>
        &bull;
        <%= @member.group.name %>
        <% if !@member.group.is_active? %>
        <span class="tag is-xs is-danger">
          inactive
        </span>
        <% end %>
      </h2>
    </div>
    </div>
    </div>
    <div class="container">
      <div class="tabs is-boxed">
        <ul>
          <%= active_link_to member_path(@member), wrap_tag: 'li', class_active: 'is-active', active: :exclusive do %>
            <span class="icon is-small">
              <i class="fa fa-briefcase"></i>
            </span>
            <span>On Loan</span>&nbsp;&nbsp;&nbsp;
            <% if ! @active_loans.blank? %>
              <span class="tag is-warning is-rounded">
                <%= @active_loans.size %>
              </span>
            <% end %>
          <% end %>

          <%= active_link_to history_member_path(@member), wrap_tag: 'li', class_active: 'is-active' do %>
            <span class="icon is-small">
              <i class="fa fa-history"></i>
            </span>
            <span>Returned</span>&nbsp;&nbsp;&nbsp;
          <% end %>
        </ul>
      </div>
</div>