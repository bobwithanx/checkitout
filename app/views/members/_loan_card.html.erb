<div class="card">
  <div class="card-content is-paddingless">
    <div class="content">
      <table class="table">
        <tr>
          <% if loan.returned_at.blank? %>
            <span>
              <%= loan.item.name %>
            </span>
            <br/>
            <span class="tag is-light">
              <%= loan.item.inventory_tag %>
            </span>
            <%= link_to 'Return', loan_complete_path(loan.id), method: :post %>
          <% else %>
            <td>
              <span class="has-text-grey">
                <%= loan.item.name %>
              </span>
            </td>
            <td>
              <span class="has-text-grey">
                <%= loan.item.inventory_tag %>
              </span>
            </td>
          <% end %>
        </td>
      </tr>
    </table>
  </div>
</div>
<div class="card-footer">
  <div class="card-footer-item">
    <p class="is-4">
      <!-- <%= l(loan.created_at, format: :day) %> -->
    </p>
  </div>
</div>
</div>