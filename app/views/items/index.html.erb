<section class="section">
  <div class="container is-fluid">
    <% flash.each_with_index do |(key, message), index| %>
      <div class="notification <%= key %>" id="<%= key %>-<%= index %>">
        <button class="delete" onclick="document.getElementById('<%= key %>-<%= index %>').style.display = 'none'"></button>
        <%= message %>
      </div>
      <% end %>
            <h1 class="title ">
              Items
            </h1>
            <% if @items.blank? %>
              <section class="hero is-medium is-light has-text-centered">
                <div class="hero-body">
                  <div class="container">
                    <p class="subtitle is-4 has-text-grey-dark has-text-weight-light">
                      Add a New Item
                    </p>
                  </div>
                </div>
              </section>
              <% else %>
                <table id="item_list" class="table order-table is-hoverable is-fullwidth">
                  <thead>
                    <th>Item</th>
                    <th>Inventory Tag</th>
                    <th>Serial Number</th>
                    <th>Description</th>
                    <th>Category</th>
                  </thead>
                  <tbody>
                    <% @items.each do |item| %>
                      <tr class="<%= 'is-selected' unless item.loans.active.size.zero? %>">
                        <td>
                          <i class="<%= item.category.icon %>"></i>&nbsp;
                          <%= link_to item_path(item) do %>
                            <%= item.brand %>
                            <%= item.name %>
                          <% end %>
                        </td>
                        <td>
                          <%= item.inventory_tag %>
                        </td>
                        <td>
                          <%= item.serial_number %>
                        </td>
                        <td>
                          <%= item.description %>
                        </td>
                        <td>
                          <% if item.category %>
                            <%= item.category.name %>
                              <% end %>
                        </td>
                      </tr>
                      <% end %>
                  </tbody>
                </table>
                <% end %>
          </div>
        </div>
</section>

<script>
  $('#item_list').DataTable({
    paging: true,
    order: [
      [
        0, "asc"
      ],
      [
        2, "asc"
      ]
    ],

    columnDefs: [{
      targets: 'no-sort',
      responsive: true,
      orderable: false
    }]
  });

  $('div.dataTables_filter input', $('#item_list').DataTable().table().container()).focus();
</script>